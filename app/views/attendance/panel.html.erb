<div data-controller="attendance" class="container mt-3">
  <div class="row align-items-center">
    <div class="col-sm-4 .h-100">
      <div class="card mx-2">
        <div class="card-body">
          <h5 class="card-title text-center">
            Guiche: <span data-attendance-target="guicheName">Nome do Guiche</span>
            <input data-attendance-target="inputName" type=text class="form-control d-none">
            <span data-attendance-target="editIcon" data-action="click->attendance#edit_box_name"><%= link_to image_tag("edit_icon.svg") %></span>
            <span data-attendance-target="confirmIcon" data-action="click->attendance#confirm_box_name" class="d-none"><%= link_to image_tag("confirm_icon.svg") %></span>
          </h5>
          <p class="card-text text-center">
            <button data-action="click->attendance#call" type="button" class="btn btn-primary mt-5 col-8" data-attendance-target="callButton" id="call_password">Chamar Senha</button>
            <button data-action="click->attendance#recall" type="button" class="btn btn-primary mt-5 col-8 d-none" data-attendance-target="recallButton" id="recall_password">Chamar Novamente</button>
            <button data-action="click->attendance#end" type="button" class="btn btn-success mt-2 col-8" id="end_password">Finalizar Senha</button>
            <button data-action="click->attendance#cancel" type="button" class="btn btn-danger mt-2 col-8" id="cancel_password">Cancelar Senha</button>
          </p>
        </div>
      </div>
    </div>
    <div class="col-sm-8 .h-100">
      <div class="card mx-2">
        <div class="card-body">
          <h5 class="card-title text-center" id="password_number">Senha: <span data-attendance-target="password"></span></h5>
          <span data-attendance-target="id" class="d-none"></span>
          <p class="card-text">
            <div class="row mt-5 justify-content-center">
              <div class=" col-6 card text-dark bg-light mb-3 me-3" style="max-width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title" id="password_sector">Setor</h5>
                  <p data-attendance-target="sector" class="card-text text-end">???</p>
                </div>
              </div>            
              <div class="col-6 card text-dark bg-light mb-3" style="max-width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title" id="pasword_service">Servi√ßo</h5>
                  <p data-attendance-target="service" class="card-text text-end">???</p>
                </div>
              </div>     
            </div>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="row justify-content-center mt-5">
    <button class="btn <%= @passwords_in_queue > 0 ? "btn-primary" : "btn-danger" %> position-relative col-auto" id="password_queue_button">
      <span id="passwords_queue_text">
        Senhas para atendimendo
      </span>
      <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="password_queue_badge">
        <%= @passwords_in_queue %>
      </span>
    </button>
  </div>
</div>
